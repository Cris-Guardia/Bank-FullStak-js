<%- include('../partials/head.ejs') %>

<body class="bg-light">

    <%- include('../partials/navigation.ejs') %>

    <% if(error) {%>
        <%- include('../partials/error.ejs') %>
    <% } %>

    <div class="row m-5 bg-blue-md text-white" style="max-height: 800px;">

        <section class="col-xs-12 col-md-6 p-5 
            d-flex flex-wrap align-items-center" style="max-height: 800px;">
            <h1 class="w-100">Sing In</h1>
    
            <form action="" class="w-100 py-5" method="post">
    
                <div class="mb-3">
                    <label for="emailInput" class="form-label">Email</label>
                    <input type="email"    class="w-100 form-control" name="email" id="emailInput" name="email" placeholder="email">
                </div>
    
                <div class="mb-3">
                    <label for="paswordInput" class="form-label">Pasword</label>
                    <input type="password" class="w-100 form-control" name="password" id="paswordInput" placeholder="password">
                </div>
    
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-50">
                        Sing In
                    </button>
                </div>
        
            </form>
            
        </section>

        <section class="d-none d-md-block col-md-6 p-0" style="max-height: 800px;">
            <img src="/img/pig.jpg" alt="" class="w-100 h-100" style="max-height: 800px;">
        </section>

    </div>

    <%- include('../partials/footer.ejs') %>

</body>