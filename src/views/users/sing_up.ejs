<%- include('../partials/head.ejs') %>

<body class="bg-light">

    <%- include('../partials/navigation.ejs') %>

    <div class="container my-5 p-5 bg-blue-d text-white">

        <h1>Create an Account</h1>

        <form action="/users/singup" class="d-flex flex-wrap justify-content-center m-5 p-5" method="POST">
    
            <div class="mb-3 w-100">
                <label for="name"      class="form-label w-100">
                    Name
                </label>
                <input type="text"     class="w-100 form-control" name="name" id="inputName" placeholder="Name" value="">
            </div>
    
            <div class="mb-3 w-100 d-flex">
                <label for="dateBirth" class="form-label w-100">
                    Date of Birth
                </label>
                <input type="date" class="form-control w-100" name="dateBirth" id="inputDateBirth" value="">
            </div>
    
            <div class="mb-3 w-100">
                <label for="inputEmail" class="form-label w-100">
                    Email
                </label>
                <input type="email" class="form-control w-100" name="email" id="inputEmail" placeholder="email" value="">
            </div>
    
            <div class="mb-3 w-100">
                <label for="inputMoney" class="form-label w-100">
                    Init Money
                </label>
                <input type="number" class="form-control w-100" name="money" id="inputMoney" placeholder="Init Money" value="">
            </div>
    
            <div class="mb-3 w-100">
                <label for="" class="form-label w-100">
                    Password
                </label>
                <input type="password" class="form-control w-100" name="password" id="" placeholder="password" value="">
            </div>
    
            <div class="mb-3 w-100">
                <label for="inputPasword" class="form-label w-100">
                    Confirm Password
                </label>
                <input type="password" class="form-control w-100" name="confirm_password" id="inputPasword" placeholder="Confirm password" value="">
            </div>
    
            <div class="mb-3 w-100">
                <button type="submit"  class="btn btn-lg btn-primary">
                    Sing In
                </button>
            </div>
    
        </form>
    </div>

    <%- include('../partials/footer.ejs') %>
    
</body>